<Window x:Name="wvw_autodemo" x:Class="wvw_autodemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wvw_autodemo"
        mc:Ignorable="d"
        Title="wvw_autodemo" Height="279" Width="350" Icon="pack://siteoforigin:,,,/wvw_autodemo.ico" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
  <Grid Margin="5,10,5,5">
    <TextBox x:Name="LogOutput" Height="170" Margin="0,26,0,0" TextWrapping="Wrap" Text="Starting up..." VerticalAlignment="Top" IsReadOnly="True" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Visible"/>
    <Button x:Name="ForceRecord" Content="Force record" HorizontalContentAlignment="Center" Click="ForceRecord_Click" VerticalAlignment="Bottom" Height="27"/>
    <CheckBox x:Name="WindowsStart" Content="Start with Windows" HorizontalAlignment="Left" VerticalAlignment="Top" Checked="WindowsStart_Checked" Unchecked="WindowsStart_UnChecked" Initialized="WindowsStart_Initialized" Height="26" Margin="10,0,0,0"/>
    <Button x:Name="SetPath" Content="Set CS:GO path" HorizontalAlignment="Left" Margin="188,-3,0,0" VerticalAlignment="Top" Width="130" Click="SetPath_Click"/>
  </Grid>
</Window>
